<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns ="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CodePlusXaml.ScaryColorListPage">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness"
				iOS="0,20,0,0">
		</OnPlatform>
	</ContentPage.Padding>
	<ContentPage.Content>
		<StackLayout>
			<StackLayout.Children>
				<Frame>
					<Frame.Content>
						<StackLayout Orientation="Horizontal">
							<StackLayout.Children>
								<BoxView BackgroundColor="Red">
								</BoxView>
								<Label Text           ="Red" VerticalOptions="Center">
								</Label>
							</StackLayout.Children>
						</StackLayout>
					</Frame.Content>
				</Frame>
				<Frame>
					<Frame.Content>
						<StackLayout Orientation="Horizontal">
							<StackLayout.Children>
								<BoxView BackgroundColor="Blue">
								</BoxView>
								<Label Text           ="Blue" VerticalOptions="Center">
								</Label>
							</StackLayout.Children>
						</StackLayout>
					</Frame.Content>
				</Frame>
				<Frame>
					<Frame.Content>
						<StackLayout Orientation="Horizontal">
							<StackLayout.Children>
								<BoxView BackgroundColor="Yellow">
								</BoxView>
								<Label Text           ="Yelllow" VerticalOptions="Center">
								</Label>
							</StackLayout.Children>
						</StackLayout>
					</Frame.Content>
				</Frame>
			</StackLayout.Children>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>