<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:ParameteredConstructorDemo" x:Class="ParameteredConstructorDemo.ParameteredConstructorDemoPage">
	<StackLayout>
		<BoxView
			HorizontalOptions="Center"
			VerticalOptions="CenterAndExpand"
			HeightRequest="100"
			WidthRequest="100">
			<BoxView.Color>
				<Color>
					<x:Arguments>
						<x:Double>1</x:Double>
						<x:Double>0</x:Double>
						<x:Double>0</x:Double>
					</x:Arguments>
				</Color>
			</BoxView.Color>
		</BoxView>
		<BoxView
			HorizontalOptions="Center"
			VerticalOptions="CenterAndExpand"
			HeightRequest="100"
			WidthRequest="100">
			<BoxView.Color>
				<Color>
					<x:Arguments>
						<x:Double>1</x:Double>
						<x:Double>0</x:Double>
						<x:Double>0</x:Double>
						<x:Double>0.5</x:Double>
					</x:Arguments>
				</Color>
			</BoxView.Color>
		</BoxView>
		<BoxView
			HorizontalOptions="Center"
			VerticalOptions="CenterAndExpand"
			HeightRequest="100"
			WidthRequest="100">
			<BoxView.Color>
				<Color>
					<x:Arguments>
						<x:Double>0.5</x:Double>
					</x:Arguments>
				</Color>
			</BoxView.Color>
		</BoxView>
	</StackLayout>
</ContentPage>
